# Variables de entorno para Sistema de Gestión Hotelera "Mar Azul" - FRONTEND
# Desarrollador: Alexander Echeverria
# Archivo: /.env

# IMPORTANTE: Solo variables que empiecen con REACT_APP_ estarán disponibles en el cliente

# Configuración del entorno
REACT_APP_ENVIRONMENT=development
REACT_APP_VERSION=1.0.0

# Configuración de API
REACT_APP_API_BASE_URL=http://localhost:5000/api
REACT_APP_API_TIMEOUT=10000
REACT_APP_API_RETRY_ATTEMPTS=3

# Configuración del hotel
REACT_APP_HOTEL_NAME=Hotel Mar Azul
REACT_APP_CONTACT_PHONE=+502 7940-0000
REACT_APP_CONTACT_EMAIL=info@hotelmarazul.com
REACT_APP_HOTEL_ADDRESS=Salamá, Baja Verapaz, Guatemala
REACT_APP_HOTEL_WEBSITE=https://hotelmarazul.com

# Configuración de idiomas
REACT_APP_DEFAULT_LANGUAGE=es
REACT_APP_SUPPORTED_LANGUAGES=es,en

# Configuración de pagos (Stripe - solo clave pública)
REACT_APP_STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key_here
REACT_APP_PAYMENT_ENABLED=true

# Configuración de archivos
REACT_APP_MAX_FILE_SIZE=5242880
REACT_APP_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf
REACT_APP_MAX_IMAGES_PER_UPLOAD=5

# Configuración de sesión
REACT_APP_SESSION_TIMEOUT=1800000
REACT_APP_TOKEN_REFRESH_INTERVAL=1500000
REACT_APP_RESERVATION_TIMEOUT=900000

# Configuración de notificaciones
REACT_APP_NOTIFICATION_DURATION=5000
REACT_APP_MAX_NOTIFICATIONS=3
REACT_APP_NOTIFICATION_POSITION=top-right

# Configuración de logging
REACT_APP_LOG_LEVEL=info
REACT_APP_ENABLE_CONSOLE_LOGS=true

# Configuración de features
REACT_APP_ENABLE_PWA=true
REACT_APP_ENABLE_OFFLINE_MODE=false
REACT_APP_ENABLE_ANALYTICS=false
REACT_APP_ENABLE_CHAT_SUPPORT=false

# URLs y enlaces externos
REACT_APP_TERMS_URL=https://hotelmarazul.com/terms
REACT_APP_PRIVACY_URL=https://hotelmarazul.com/privacy
REACT_APP_SUPPORT_URL=https://hotelmarazul.com/support

# Configuración de mapa (si se usa)
REACT_APP_GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here
REACT_APP_HOTEL_LATITUDE=15.1067
REACT_APP_HOTEL_LONGITUDE=-90.3110

# Configuración de redes sociales
REACT_APP_FACEBOOK_URL=https://facebook.com/hotelmarazul
REACT_APP_INSTAGRAM_URL=https://instagram.com/hotelmarazul
REACT_APP_TWITTER_URL=https://twitter.com/hotelmarazul

# Configuración de desarrollo (solo en desarrollo)
REACT_APP_DEBUG_MODE=true
REACT_APP_MOCK_API=false
REACT_APP_SHOW_DEV_TOOLS=true

# Configuración de seguridad
REACT_APP_ENABLE_SECURITY_HEADERS=true
REACT_APP_CSP_ENABLED=true

# Configuración de rendimiento
REACT_APP_ENABLE_LAZY_LOADING=true
REACT_APP_CHUNK_SIZE_WARNING_LIMIT=512000
REACT_APP_ENABLE_SERVICE_WORKER=true

# Configuración de email templates (para mostrar en cliente)
REACT_APP_SUPPORT_EMAIL=soporte@hotelmarazul.com
REACT_APP_RESERVATIONS_EMAIL=reservas@hotelmarazul.com
REACT_APP_BILLING_EMAIL=facturacion@hotelmarazul.com
